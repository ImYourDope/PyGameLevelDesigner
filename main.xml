                x="250"
                y="35"
                text="COLLISIONS">
        <Hover position="relative"
               x="10"/>
    </TextButton>

    <TextButton id="expand-canvas-button"
                x="250"
                y="65"
                text="EXPAND">
        <Hover position="relative"
               x="10"/>
    </TextButton>

    <TextButton id="layer-menu-button"
                x="250"
                y="125"
                text="LAYER MENU">
        <Hover position="relative"
               x="10"/>
    </TextButton>

    <TextButton id="test-run-button"
                x="250"
                y="95"
                text="TEST RUN">
        <Hover position="relative"
               x="10"/>
    </TextButton>

    <Input id="tile-library-search-line"
           x="56"
           y="165"
           width="300"
           height="40"/>

    <ScrollList
            id="tiles"
            x="0"
            y="215"
            width="412"
            height="490"
    />

</Layout>