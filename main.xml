    </TextButton>

    <TextButton id="load-project-button"
                x="10"
                y="35"
                text="LOAD PROJECT">
        <Hover position="relative"
               x="10"/>
    </TextButton>

    <TextButton id="save-project-button"
                x="10"
                y="65"
                text="SAVE PROJECT">
        <Hover position="relative"
               x="10"/>
    </TextButton>

    <TextButton id="load-tiles-button"
                x="10"
                y="95"
                text="LOAD TILE">
        <Hover position="relative"
               x="10"/>
    </TextButton>

    <TextButton id="load-spritesheet-button"
                x="10"
                y="125"
