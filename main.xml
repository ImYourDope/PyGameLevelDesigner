    <TextButton id="load-project-button"
            x="10"
            y="33"
            text="LOAD PROJECT">

        <Hover position="relative"
               x="10"/>
    </TextButton>

    <TextButton id="save-project-button"
            x="10"
            y="61"
            text="SAVE PROJECT">
        <Hover position="relative"
               x="10"/>
    </TextButton>

    <TextButton id="create-layer-button"
            x="10"
            y="89"
            text="CREATE LAYER">
        <Hover position="relative"
               x="10"/>
    </TextButton>

    <TextButton id="create-level-button"
            x="10"
            y="117"
