<?xml version="1.0" encoding="UTF-8" ?>
<Layout width="800"
        height="460"
        x="300"
        y="125">

    <Button id="close-popup"
            x="40"
            y="400"
            width="150"
            height="40"
            text="CLOSE">
        <Align x="center"
               y="center"/>
    </Button>

    <Button id="save-tile"
            x="610"
            y="400"
            width="150"
            height="40"
            text="SAVE">
        <Align x="center"
               y="center"/>
    </Button>

    <Input id="input-tile_name"
           width="290"
           height="40"
           x="255"
           y="340"/>

    <Label height="30"
           x="400"
           y="290"
           text="Enter tile name:">
        <Align x="center"
               y="center"/>
    </Label>

    <Image id="current-loading-tile"
           width="192"
           height="192"
           x="400"
           y="170">
        <Align x="center"
               y="center"/>
    </Image>

    <Label height="50"
           x="400"
           y="10"
           text="LOAD TILE">
        <Align x="center"
               y="top"/>
    </Label>

</Layout>