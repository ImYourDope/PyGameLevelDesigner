<?xml version="1.0" encoding="UTF-8" ?>
<Layout width="600"
        height="280"
        x="600"
        y="210">

    <Label height="45"
           x="300"
           y="5"
           text="CREATE PROJECT">
            <Align x="center"
                   y="top"/>
    </Label>

    <Label height="30"
           x="300"
           y="45"
           text="Project name:">
            <Align x="center"
                   y="top"/>
    </Label>

    <Label height="30"
           x="150"
           y="120"
           text="Canvas width:">
            <Align x="center"
                   y="top"/>
    </Label>

    <Label height="30"
           x="450"
           y="120"
           text="Canvas height:">
            <Align x="center"
                   y="top"/>
    </Label>

    <Input id="input-project-name"
           x="100"
           y="75"
           width="400"
           height="40"/>

    <Input id="input-canvas-width"
           x="50"
           y="150"
           vocabulary = '0123456789'
           width="200"
           height="40"/>

    <Input id="input-canvas-height"
           x="350"
           y="150"
           vocabulary= '0123456789'
           width="200"
           height="40"/>

    <Button id="close-popup"
            x="50"
            y="220"
            width="200"
            height="40"
            text="CLOSE">
            <Align x="center"
                   y="center"
                   />
    </Button>

    <Button id="ok-create-project"
            x="350"
            y="220"
            width="200"
            height="40"
            text="OK">
            <Align x="center"
                   y="center"
                   />
    </Button>

</Layout>